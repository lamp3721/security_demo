<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.PermissionMapper">

    <!-- 根据用户ID查询该用户的所有权限编码 -->
    <select id="selectPermissionsByUserId" resultType="java.lang.String">
        SELECT DISTINCT p.code
        FROM t_user_role ur
                 <!-- 用户角色表 JOIN 角色权限表 -->
                 JOIN t_role_permission rp ON ur.role_id = rp.role_id
                 <!-- 角色权限表 JOIN 权限表 -->
                 JOIN t_permission p ON rp.permission_id = p.id
        WHERE ur.user_id = #{userId}
    </select>

</mapper> 